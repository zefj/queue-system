{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "declaration": true,
    "noImplicitAny": false, // TODO: flip it to true at some point
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext"
    ],
    "inlineSourceMap": true,
//    "outDir": "./dist",
    "baseUrl": ".",
    "typeRoots" : ["node_modules/@types", "./server/src/interfaces"]
  }
}
